<view>
  <view>你选择的是：{{value}}区</view>
  <picker-view
    indicator-style="height: 50px;"
    style="width: 100%; height: 300px;"
    value="{{value}}"
    bindchange="bindChange"
  >
    <picker-view-column>
      <view wx:for="{{region}}" style="line-height: 50px" wx:key="*this">{{item}}区</view>
    </picker-view-column>
  </picker-view>
</view>
