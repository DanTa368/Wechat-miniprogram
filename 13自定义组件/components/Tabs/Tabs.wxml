<view class="tabs">
    <view class="tabs_title ">
        <view 
        class="title_item {{item.isActive?'active':''}}" 
        wx:for="{{tabs}}" 
        wx:key="id"
        bindtap="handleItemTap"
        data-index="{{item.id}}">
        {{item.name}}
        </view>
    </view>
    <view class="tabs_content"></view>
</view>
