<view class="main">
    <!-- 公共头部 -->
    <MyTitle></MyTitle>

    <!-- 首页导航 -->
    <view class="nav_wrap">
        <scroll-view scroll-x="true" class="nav">
            <view bindtap="activeNav" data-index="{{index}}" class="nav_item {{index===currentIndexNav?'active':''}}" wx:for="{{navList}}" wx:key="id">
                {{item.text}}
            </view>
        </scroll-view>
    </view>

    <!-- 轮播图 -->
    <view class="slides">
        <swiper autoplay indicator-dots circular>
            <swiper-item wx:for="{{swiperList}}" wx:key="*this">
                <navigator>
                    <image src="{{item.imgSrc}}" mode="widthFix"></image>
                </navigator>
            </swiper-item>
        </swiper>
    </view>

    <!-- 视频 -->
    <view class="video_wrap" >
        <navigator url="" class="video_item" wx:for="{{videosList}}" wx:key="id">
            <!-- 图片 -->
            <image src="{{item.imgSrc}}" mode="widthFix"></image>
            <!-- 标题 -->
            <view class="vidoe_title">{{item.desc}}</view>
        </navigator>
    </view>
</view>